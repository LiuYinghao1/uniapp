.container {
  height: 100vh;
  padding: 5px;
  font-size: 14px;
  line-height: 24px;
}
.grid-item-box {
  padding-top: 10px;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  height: 40px;
  line-height: 40px;
}
.quan {
  background-color: #fff;
  width: 100%;
  height: 80px;
  padding-bottom: 8px;
  display: flex;
  justify-content: space-around;
}
.quan .box {
  display: flex;
  width: 170px;
  height: 90%;
  background-color: #fec007;
}
.quan .box .left {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  padding-top: 10px;
  color: #fff;
  flex: 2;
  background-color: #d39e00;
  border-right: #fff 1px dashed;
}
.quan .box .left .left-top {
  font-size: 22px;
}
.quan .box .right {
  flex: 1;
  background-color: #fec007;
  color: #fff;
  text-align: center;
  line-height: 80px;
  font-size: 16px;
}
.total-group {
  padding-top: 5px;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
}
.total-group .null {
  width: 100%;
  background-color: #000;
  height: 80px;
}
.total-group .text :nth-child(2) {
  font-size: 12px;
  color: #ccc;
}
.total-group .text :nth-child(3) {
  color: red;
  font-size: 18px;
}
.total-group .text :nth-child(4) {
  color: #ccc;
  font-size: 12px;
}
.new {
  margin-top: 10px;
  padding: 10px;
  background-color: #fff;
  position: relative;
}
.new .see {
  position: absolute;
  top: 10px;
  right: 10px;
}
.new .new-info {
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
}
.new .new-info .img {
  width: 130px;
  height: 80px;
  background-color: #000;
}
.new .new-info .new-text :nth-child(2) {
  font-size: 12px;
  color: #ccc;
}
.new .new-info .new-text :nth-child(3) {
  color: red;
  font-size: 18px;
}
.new .new-info .new-text :nth-child(4) {
  color: #ccc;
  font-size: 12px;
}

